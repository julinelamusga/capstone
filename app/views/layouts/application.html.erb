<!DOCTYPE html>
<html>
<head>
  <title>Capstone</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

    <ul>
        <li><%= link_to "Home", welcome_index_path %></li>
        <li><%= link_to "About", welcome_about_path %></li>
    </ul>

    <div>
      <% if current_user %>
        Hello <%= link_to current_user.email, user_path(current_user) %>! <%= link_to "Sign out", destroy_user_session_path, method: :delete %>
      <% else %>
        <%= link_to "Sign In", new_user_session_path %> or 
        <%= link_to "Sign Up", new_user_registration_path %>
      <% end %>
    </div>

    <% if flash[:notice] %>
      <div>
        <%= flash[:notice] %>
      </div>
    <% elsif flash[:error] %>
      <div>
        <%= flash[:error] %>
      </div>
    <% elsif flash[:alert] %>
      <div>
        <%= flash[:alert] %>
      </div>
    <% end %>

    <%= yield %>

</body>
</html>